<p id="notice"><%= notice %></p>

<h1>
  <%= controller.action_name == 'search' ? 'Search results' : 'Articles' %>

  <small class='float-right'>
    <%= link_to 'New Article', new_article_path, class: 'btn btn-outline-info' %>
    <%= link_to 'All Articles', articles_path, class: 'btn btn-outline-info' if params[:q] %>
  </small>
</h1>

<hr>

<%= form_tag search_articles_path, method: 'get' do %>
  <div class="input-group select-group">
    <%= text_field_tag :q, params[:q], class: 'form-control', placeholder: 'Search...' %>
    <%= select_tag(:t, options_for_select(search_method_options, params[:t] || 'match'), { :class => 'custom-select input-group-addon' }) %>
  </div>
  <% if @msg.present? %>
  <div class='alert alert-danger mt-3'>
    <%= @msg %>
  </div>
  <% end %>
<% end %>

<% if @articles.present? %>
<table class="table mt-3 table-hover table-striped table-bordered">
  <thead>
    <tr>
      <th scope='col'>Title</th>
      <th scope='col'>Content</th>
      <th scope='col' class='headerSortDown text-nowrap'>Published on</th>
      <th scope='col'></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.__send__ controller.action_name == 'search' ? :each_with_hit : :each do |article, hit| %>
      <tr>
        <td><%= hit.try(:highlight).try(:title) ? hit.highlight.title.join.html_safe : article.title %></td>
        <td><%= truncate(hit.try(:highlight).try(:content) ? hit.content : article.content) %></td>
        <td><%= article.published_on.strftime('%Y-%m-%d') %></td>
        <td>
          <div class='float-right'>
            <%= link_to 'Show', article , class: 'btn btn-outline-primary' %>
            <%= link_to 'Edit', edit_article_path(article) , class: 'btn btn-outline-primary' %>
            <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<nav aria-label="pagination">
  <%= paginate @articles %>
</nav>

<% elsif params[:q].present? && params[:q].length > 1 %>
<div class='alert alert-warning mt-3'>
    No articles found with keyword <strong><%= params[:q] %></strong>
  </div>
<% end %>

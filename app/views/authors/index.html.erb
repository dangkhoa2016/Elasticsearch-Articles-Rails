<p id="notice"><%= notice %></p>

<h1>
  Authors
  <small class='float-right'>
    <%= link_to 'New Author', new_author_path, class: 'btn btn-outline-info' %>
  </small>
</h1>

<hr>

<%= form_tag search_authors_path, method: 'get' do %>
  <div class="input-group">
    <%= text_field_tag :q, params[:q], class: 'form-control', placeholder: 'Search...' %>
  </div>
  <% if @msg.present? %>
  <div class='alert alert-danger mt-3'>
    <%= @msg %>
  </div>
  <% end %>
<% end %>

<% if @authors.present? %>
<table class="table mt-3 table-hover table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col" class='headerSortDown'>Created at</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.first_name %></td>
        <td><%= author.last_name %></td>
        <td><%= author.created_at.strftime('%Y-%m-%d') %></td>
        <td>
          <h5 title="Articles by this author" class='float-left'><span class='badge badge-warning'><%= author.articles.size %></span></h5>
          <div class='float-right'>
            <%= link_to 'Show', author, class: 'btn btn-outline-info' %>
            <%= link_to 'Edit', edit_author_path(author), class: 'btn btn-outline-info' %>
            <%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<nav aria-label="pagination">
  <%= paginate @authors %>
</nav>

<% elsif params[:q].present? && params[:q].length > 1 %>
<div class='alert alert-warning mt-3'>
    No authors found with keyword <strong><%= params[:q] %></strong>
  </div>
<% end %>
